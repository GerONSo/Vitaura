<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contacts_scroll_view">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".contacts.ContactsFragment">

        <TextView
            android:id="@+id/tv_title_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8dp"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Клиника Vitaura" />

        <TextView
            android:id="@+id/tv_text_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8dp"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:text="г. Москва, Большой Тишинский пер., 10 стр. 1\nпн-сб: 10:00 – 21:00, вс: 10:00 – 20:00\n\n
+7(495)324-10-03 \n\n
info@vitaura-clinic.ru"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/soc_icon1_contacts"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/soc_icon1" />

            <ImageView
                android:id="@+id/soc_icon2_contacts"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/soc_icon2" />

            <ImageView
                android:id="@+id/soc_icon3_contacts"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/soc_icon3" />

        </LinearLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-medium"
            android:text="Как к нам добраться"
            android:textColor="@color/textColor"
            android:textSize="@dimen/adaptive_text_size_title" />

        <WebView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:id="@+id/map1"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_map1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="10dp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/adaptive_text_size" />

        <WebView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:id="@+id/map2"
            android:src="@drawable/map2"
            android:scaleType="fitXY"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tv_map2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="10dp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/adaptive_text_size"
            android:layout_marginBottom="15dp"/>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>