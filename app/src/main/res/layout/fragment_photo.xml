<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".media.gallery.PhotoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            android:background="@color/backgroundDark"
            android:orientation="vertical"
            app:cardCornerRadius="16dp"
            android:id="@+id/card_clinic">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_clinic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/d2" />

                <LinearLayout
                    android:id="@+id/name_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:elevation="1dp"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_clinic"
                    app:layout_constraintHorizontal_weight="5"
                    app:layout_constraintLeft_toLeftOf="@id/iv_clinic"
                    app:layout_constraintRight_toLeftOf="@id/empty_view"
                    app:layout_constraintTop_toTopOf="@id/iv_clinic">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:text="Лазерный липолиз Zerona Green"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/adaptive_text_size_title"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/special_description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:text="Эксклюзивно в Москве! Похудение быстро, безболезненно, в нескольких зонах!"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/adaptive_text_size"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>

                <View
                    android:id="@+id/empty_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="4"
                    app:layout_constraintLeft_toRightOf="@id/name_layout"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/empty_view2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/media_card"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/empty_view"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            android:background="@color/backgroundDark"
            android:orientation="vertical"
            app:cardCornerRadius="16dp"
            android:id="@+id/card_change">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_change"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/d2" />

                <LinearLayout
                    android:id="@+id/name_layout_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:elevation="1dp"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_change"
                    app:layout_constraintHorizontal_weight="5"
                    app:layout_constraintLeft_toLeftOf="@id/iv_change"
                    app:layout_constraintRight_toLeftOf="@id/empty_view3"
                    app:layout_constraintTop_toTopOf="@id/iv_change">

                    <TextView
                        android:id="@+id/title_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:text="Лазерный липолиз Zerona Green"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/adaptive_text_size_title"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/special_description_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:text="Эксклюзивно в Москве! Похудение быстро, безболезненно, в нескольких зонах!"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/adaptive_text_size"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>

                <View
                    android:id="@+id/empty_view3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="4"
                    app:layout_constraintLeft_toRightOf="@id/name_layout_2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/empty_view4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/media_card"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/empty_view3"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            android:background="@color/backgroundDark"
            android:orientation="vertical"
            app:cardCornerRadius="16dp"
            android:id="@+id/card_prize">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_prize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/d2" />

                <LinearLayout
                    android:id="@+id/name_layout_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:elevation="1dp"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_prize"
                    app:layout_constraintHorizontal_weight="5"
                    app:layout_constraintLeft_toLeftOf="@id/iv_prize"
                    app:layout_constraintRight_toLeftOf="@id/empty_view5"
                    app:layout_constraintTop_toTopOf="@id/iv_prize">

                    <TextView
                        android:id="@+id/title_3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:text="Лазерный липолиз Zerona Green"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/adaptive_text_size_title"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/special_description_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:text="Эксклюзивно в Москве! Похудение быстро, безболезненно, в нескольких зонах!"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/adaptive_text_size"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>

                <View
                    android:id="@+id/empty_view5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="4"
                    app:layout_constraintLeft_toRightOf="@id/name_layout_3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/empty_view6"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/media_card"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/empty_view5"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>